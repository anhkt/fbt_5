<td>
  <% unless category.leaf? %>
    <button data-toggle="collapse" data-parent="#table_category"
      data-target=".category-<%= category.id %>" class="btn btn-box-tool
      btn-tree" type="button">
      <i class="fa fa-plus"></i>
    </button>
  <% end %>
</td>
<td><%= category.name %></td>
<td>
  <%= link_to t(".edit"), "#", class: "btn btn-info" %>
</td>
<td>
  <%= link_to t(".delete"), "#", class: "btn btn-danger",
    method: :delete, data: {confirm: t("data.confirm")} %>
</td>
