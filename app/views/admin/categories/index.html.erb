<% provide :title, t(".title") %>

<div class="box-header">
  <h1><%= t ".title" %></h1>
</div>
<div class="box-body">
  <div class="row margin-bottom-10">
    <div class="col-md-3">
      <%= link_to t("admin.categories.new.title"), "#",
        class: "btn btn-primary button-add" %>
    </div>
    <div class="col-md-9 text-right">
      <%= render "search_form" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-responsive
        table-bordered table-category">
        <thead>
          <tr>
            <th></th>
            <th><%= t ".name" %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= categories_tree_for @categories %>
        </tbody>
      </table>
    </div>
  </div>
</div>
