<% if current_user.liked? @review %>
  <%= link_to tour_review_like_path(@review.tour, @review, @supports.like),
    title: @supports.like_title, remote: true, method: :delete do %>
    <i class="fa fa-thumbs-up fa-2x"></i>
  <% end %>
<% else %>
  <%= link_to tour_review_likes_path(@review.tour, @review),
    title: @supports.like_title, remote: true, method: :post do %>
    <i class="fa fa-thumbs-o-up fa-2x"></i>
  <% end %>
<% end %>
<span class="badge"> <%= @review.likes.count %></span>
